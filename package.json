{
  "name": "qulome-wechat-formatter",
  "version": "1.0.0",
  "description": "微信文章排版工具 - 专为Safari浏览器优化",
  "main": "src/index.html",
  "scripts": {
    "dev": "live-server src --port=8080 --browser=safari",
    "lint": "eslint src/**/*.js --config config/.eslintrc.json",
    "lint:fix": "eslint src/**/*.js --config config/.eslintrc.json --fix",
    "format": "prettier --write . --config config/.prettierrc",
    "format:check": "prettier --check . --config config/.prettierrc",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^17.7.0",
    "@commitlint/config-conventional": "^17.7.0",
    "live-server": "^1.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
} 